<div class="page-header">
    <h1><%= @painting.name %></h1>
</div>
<div class="row">
 <div class="span8">
 <div class="img-polaroid"> <%= image_tag @painting.image_url(:thumblarge) if @painting.image? %> </div>
</div>

<div class="span3">

 <p id="notice"><%= notice %></p>
<p> <b> Downloads </b> 
<%= @painting.downloads %></p>
<p>Tags: <%= raw @painting.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %> </p>


<p><%= link_to 'Edit', edit_painting_path(@painting) %> |
<%= link_to 'Back', paintings_path %></p>

<%= link_to 'Download', "/paintings/#{@painting.id}/download", class:'btn btn-large btn-success',type:'button' %>
</div>
</div>