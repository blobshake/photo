<div class="page-header">
       <h1>Listing users</h1>
      </div>


<table class="table table-striped">
  <tr>
    <th>Email</th>
    <th>Password digest</th>
    <th>User ID</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.password_digest %></td>
    <td><%= user.id %></td>
    <td><%= link_to 'Show', user, class: 'btn btn-mini', type: 'button' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: 'btn-mini btn btn-warning', type: 'button' %></td>
    <td><%= link_to 'Destroy', user, class: 'btn btn-mini btn-danger', type: 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, class: 'btn btn-info' %>

