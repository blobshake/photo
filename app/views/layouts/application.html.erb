<!DOCTYPE html>
<html>
<head>
  <title>Photo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
	        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </a>
	        <a class="brand" href=<%= paintings_path %>>Somephotos</a>
	        <div class="nav-collapse">
	          <ul class="nav">
	            <li><%= link_to "Upload new photo", new_painting_path %></li>
	            <li><%= link_to "View Users", users_path %></li>
	            <li><%= link_to "All Photos", 'paintings/index_admin' %></li>
	            <li><%= link_to "Sign Out", 'sessions#destroy' %></li>
	          </ul>
	        </div>
	      </div>
	    </div>
	  </div>
	
	
	
	
	

	<% flash.each do |k, v| %>
	      <div class="<%= k %>"><%= v %></div>
	  <% end %>
	

	<div class="user_messages">	
	<% if current_user %>
	  Logged in as <%= current_user.email %> and <%= current_user.id %>
	  <%= link_to "Log Out", logout_path %>
	<% else %>
	  <%= link_to "Sign Up", signup_path %> or
	  <%= link_to "Log In", login_path %>
	<% end %>
	</div>

<%= yield %>

</body>
</html>


